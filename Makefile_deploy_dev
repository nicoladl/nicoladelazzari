SSH_HOST=ssh.nicoladelazzari.it
SSH_USER=nicoladelazzari.it
WEB_DIR=/www/

rsync-hp:
	rsync -az --no-perms -i --omit-dir-times ./hp/* ${SSH_USER}@${SSH_HOST}:${WEB_DIR} --exclude-from 'exclude-list.txt'

rsync-temp:
	rsync -az --no-perms -i --omit-dir-times ./temp/* ${SSH_USER}@${SSH_HOST}:${WEB_DIR} --exclude-from 'exclude-list.txt'

deploy-hp: rsync

deploy-temp: rsync-temp
